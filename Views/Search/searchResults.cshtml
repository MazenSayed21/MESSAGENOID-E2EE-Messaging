@model IEnumerable<MESSAGENOID.Models.ViewModels.UserSearchResultVM>

@{
    ViewData["Title"] = "Search Results";
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="display-6">Results for "<span class="text-primary">@ViewBag.Query</span>"</h2>
            <p class="text-muted">Found @Model.Count() potential recipients</p>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-search text-muted" style="font-size: 3rem;"></i>
            <h4 class="mt-3">No one found.</h4>
            <p>Try searching for a different name or email address.</p>
            <a href="/" class="btn btn-outline-secondary">Go Back</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var user in Model)
            {
                <div class="col-md-4 col-sm-6 mb-4">
                    <div class="card h-100 shadow-sm border-0 transition-hover">
                        <div class="card-body text-center p-4">
                            <div class="mb-3">
                                <img src="@(string.IsNullOrEmpty(user.ProfilePicUrl) ? "/images/default-avatar.png" : user.ProfilePicUrl)"
                                     class="rounded-circle img-thumbnail"
                                     style="width: 100px; height: 100px; object-fit: cover;"
                                     alt="@user.DisplayName's profile">
                            </div>

                            <h5 class="card-title fw-bold">@user.DisplayName</h5>

                            <p class="card-text text-muted small mb-3">
                                @(string.IsNullOrEmpty(user.Bio) ? "No bio provided." : user.Bio)
                            </p>

                            @if (!string.IsNullOrEmpty(user.PublicKey))
                            {
                                <div class="mb-3">
                                    <span class="badge rounded-pill bg-light text-success border border-success">
                                        <i class="bi bi-shield-lock-fill"></i> Secure Key Ready
                                    </span>
                                </div>
                            }

                            <div class="d-grid">
                                <a asp-controller="Profile"
                                   asp-action="Index"
                                   asp-route-id="@user.id"
                                   class="btn btn-outline-primary">
                                    View Profile
                                </a>
                            </div>

                            <div class="d-grid">
                                <a asp-controller="Message"
                                   asp-action="Chat"
                                   asp-route-id="@user.id"
                                   class="btn btn-primary rounded-pill">
                                    Send Anonymous Message
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .transition-hover:hover {
        transform: translateY(-5px);
        transition: transform 0.3s ease;
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }
</style>