@{
    ViewData["Title"] = "Home";
}

<div class="text-center py-5">
    <h1 class="display-4 fw-bold">Anonymous. Secure. <span class="text-primary">Encrypted.</span></h1>
    <p class="lead mb-5">Find your friends and send them feedback that even we can't read.</p>

</div>

<div class="row mt-5 text-center">
    <div class="col-md-4">
        <div class="p-3">
            <i class="bi bi-key text-primary h1"></i>
            <h3>Your Keys</h3>
            <p>Your private key stays on your device. We never see it.</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="p-3">
            <i class="bi bi-incognito text-primary h1"></i>
            <h3>Stay Anonymous</h3>
            <p>Send honest feedback without revealing your identity.</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="p-3">
            <i class="bi bi-lock text-primary h1"></i>
            <h3>Zero Knowledge</h3>
            <p>Even if our database is leaked, your messages remain secret.</p>
        </div>
    </div>
</div>